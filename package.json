{
  "name": "manhwa-translator-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for translating Korean manhwa webtoons to English",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run -r build",
    "clean": "pnpm run -r clean && rm -rf node_modules",
    "frontend:dev": "pnpm --filter frontend dev",
    "backend:dev": "pnpm --filter backend dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "packageManager": "pnpm@8.12.0"
} 